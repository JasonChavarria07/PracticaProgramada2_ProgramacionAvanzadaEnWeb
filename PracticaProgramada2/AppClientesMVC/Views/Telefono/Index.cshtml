@model List<AppClientesMVC.Models.Telefono>
@{
    ViewBag.Title = "Teléfonos del Cliente";
    int clienteId = ViewBag.ClienteId;
}

<h2>Teléfonos del Cliente @clienteId</h2>

<a class="btn btn-primary" asp-action="Crear" asp-route-clienteId="@clienteId">Agregar Teléfono</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Número</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tel in Model)
        {
            <tr>
                <td>@tel.Numero</td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-action="Eliminar" asp-route-id="@tel.Id" asp-route-clienteId="@clienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>